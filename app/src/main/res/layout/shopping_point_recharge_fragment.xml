<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.shoppingpointrecharge.ShoppingPointRechargeFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        app:tabContentStart="32dp"
        app:tabIndicatorAnimationMode="linear"
        app:tabIndicatorColor="@color/secondaryColor"
        app:tabIndicatorHeight="@dimen/four"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabPaddingEnd="16dp"
        app:tabPaddingStart="16dp"
        app:tabRippleColor="@color/secondaryLightColor"
        app:tabTextAppearance="?attr/textAppearanceSubtitle1"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/secondaryLightColor"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>