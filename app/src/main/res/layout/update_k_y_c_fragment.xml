            app:endIconMode="dropdown_menu"
            app:layout_constraintTop_toBottomOf="@+id/date_birth_layout">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nid_passport_layout"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/twenty"
            android:hint="NID/Passport Number"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/country_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nid_passport_front_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/twenty"
            android:text="NID/Passport Front Photo"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nid_passport_layout" />

        <LinearLayout
            android:id="@+id/nid_passport_front_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/three"
            android:layout_marginEnd="@dimen/twenty"
            android:background="@drawable/box_stroke_selector"
            android:orientation="horizontal"
            android:padding="@dimen/three"
            app:layout_constraintTop_toBottomOf="@+id/nid_passport_front_title">

            <com.google.android.material.button.MaterialButton
